.include <bsd.own.mk>

SHARED_LIBS=	pixman-1 16.6

.if ${MACHINE} == amd64 && !${COMPILER_VERSION:L:Mgcc4*}
CONFIGURE_ARGS += --disable-sse2
.endif

.if ${MACHINE_ARCH} == arm
CONFIGURE_ARGS +=  --disable-arm-simd --disable-arm-neon
.endif

.if ${MACHINE_ARCH} == m68k
CFLAGS += -fno-regmove
CONFIGURE_ARGS += --cache-file=/dev/null
.endif

.include <bsd.xorg.mk>
